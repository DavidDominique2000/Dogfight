
public class Menu {
	
	public static boolean counting = false;
	public static int countdown = 4;

	
	public Menu(){
		
	}
	
	public void countdown(){
		counting = true;
		
		Dogfight.panel.repaint();
		try {
			Thread.sleep(1200);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		for(int i = 0; i < countdown; countdown --){
			Dogfight.panel.repaint();
			try {
				Thread.sleep(1200);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		counting = false;
		countdown = 4;
		Dogfight.panel.repaint();
	}
}
